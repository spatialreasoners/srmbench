# Include package data
include README.md
include LICENSE
include requirements.txt
include requirements-dev.txt
include pyproject.toml
include setup.py

# Include configuration files
include *.yaml
include *.yml
include *.json
include *.toml
include *.cfg
include *.ini

# Include documentation
recursive-include docs *.md *.rst *.txt *.yaml *.yml *.json
recursive-include examples *.py *.md *.yaml *.yml *.json

# Include tests
recursive-include tests *.py *.yaml *.yml *.json
recursive-include tests *.md

# Include scripts
include scripts/*
include bin/*

# Exclude unnecessary files
global-exclude *.pyc
global-exclude *.pyo
global-exclude *.pyd
global-exclude __pycache__
global-exclude .git*
global-exclude .DS_Store
global-exclude .coverage
global-exclude .pytest_cache
global-exclude .mypy_cache
global-exclude .tox
global-exclude .venv
global-exclude venv
global-exclude env
global-exclude .env
global-exclude *.egg-info
global-exclude build
global-exclude dist
global-exclude .eggs
global-exclude .idea
global-exclude .vscode
global-exclude *.log
global-exclude *.tmp
global-exclude *.temp
